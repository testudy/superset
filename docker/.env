# Allowing python to print() in docker
PYTHONUNBUFFERED=1

COMPOSE_PROJECT_NAME=superset
DEV_MODE=false

# database configurations (do not modify)
DATABASE_DB=superset
DATABASE_HOST=superset_db
# Make sure you set this to a unique secure random value on production
DATABASE_PASSWORD=superset_1234^5
DATABASE_USER=superset_1234^5

EXAMPLES_DB=examples
EXAMPLES_HOST=superset_db
EXAMPLES_USER=examples
# Make sure you set this to a unique secure random value on production
EXAMPLES_PASSWORD=examples
EXAMPLES_PORT=5432

# database engine specific environment variables
# change the below if you prefer another database engine
DATABASE_PORT=5432
DATABASE_DIALECT=postgresql
POSTGRES_DB=superset
POSTGRES_USER=superset_1234^5
# Make sure you set this to a unique secure random value on production
POSTGRES_PASSWORD=superset_1234^5
#MYSQL_DATABASE=superset
#MYSQL_USER=superset
#MYSQL_PASSWORD=superset
#MYSQL_RANDOM_ROOT_PASSWORD=yes

# Add the mapped in /app/pythonpath_docker which allows devs to override stuff
PYTHONPATH=/app/pythonpath:/app/docker/pythonpath_dev
REDIS_HOST=redis
REDIS_PORT=6379

# Development and logging configuration
# FLASK_DEBUG: Enables Flask dev features (auto-reload, better error pages) - keep 'true' for development
FLASK_DEBUG=false
# SUPERSET_LOG_LEVEL: Controls Superset application logging verbosity (debug, info, warning, error, critical)
SUPERSET_LOG_LEVEL=warning

SUPERSET_APP_ROOT="/"
SUPERSET_ENV=production
SUPERSET_LOAD_EXAMPLES=no
CYPRESS_CONFIG=false
SUPERSET_PORT=8088
MAPBOX_API_KEY=''

# Make sure you set this to a unique secure random value on production
SUPERSET_SECRET_KEY=135@$^
ENABLE_PLAYWRIGHT=false
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
BUILD_SUPERSET_FRONTEND_IN_DOCKER=true

UV_HTTP_TIMEOUT="300"
PIP_TIMEOUT="120"
PIP_INDEX_URL=https://mirrors.cloud.tencent.com/pypi/simple/
